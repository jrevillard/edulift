# Development Environment Variables
# Copy this file to .env and update with your actual values

# API Configuration
VITE_API_URL=http://localhost:3001/api/v1
VITE_SOCKET_URL=http://localhost:3001
VITE_SOCKET_FORCE_POLLING=false

# Mobile Store URLs (for deep links)
VITE_APP_STORE_URL=https://apps.apple.com/app/edulift
VITE_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.edulift

# Universal Links and App Links (for iOS/Android deep linking)
VITE_APP_UNIVERSAL_LINKS_BASE_URL=https://transport.tanjama.fr
VITE_MOBILE_APP_LINKS_BASE_URL=edulift://

# JWT Secrets (generate these for your environment)
VITE_JWT_ACCESS_SECRET=your-jwt-access-secret-key-here
VITE_JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here

# Email Configuration
VITE_EMAIL_HOST=smtp.gmail.com
VITE_EMAIL_PORT=587
VITE_EMAIL_ENCRYPTION=STARTTLS
VITE_EMAIL_USER=your-email@gmail.com
VITE_EMAIL_PASSWORD=your-app-password

# External Services
VITE_CALENDAR_PROVIDER=google
VITE_CALENDAR_API_KEY=your-google-calendar-api-key

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=false
VITE_ENABLE_NOTIFICATIONS=false

# Development
VITE_DEV=true
VITE_MODE=development

# Build Configuration
VITE_BUILD_COMPRESS=true
VITE_BUILD_SOURCEMAP=true