# EduLift Production Environment Configuration Example
# Copy this file to .env.prod and fill in your actual values

# Application
NODE_ENV=production
FRONTEND_URL=https://your-domain.com
BACKEND_PORT=3001
FRONTEND_PORT=3000

# Database
POSTGRES_DB=edulift
POSTGRES_USER=edulift
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_PORT=5432
DATABASE_URL=postgresql://edulift:your-secure-postgres-password@postgres:5432/edulift

# Redis Cache
REDIS_PASSWORD=your-redis-password
REDIS_PORT=6379
REDIS_URL=redis://:your-redis-password@redis:6379

# Security
JWT_SECRET=your-very-long-random-jwt-secret

# Email Configuration
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@your-domain.com

# Frontend API URL (for external access)
VITE_API_URL=https://your-domain.com/api/v1
VITE_SOCKET_URL=https://your-domain.com

# Socket.IO Configuration
# Set to 'true' to force polling transport (useful for proxy/firewall issues)
# Set to 'false' or leave empty to use websocket + polling (default)
VITE_SOCKET_FORCE_POLLING=false

# Nginx (for production)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Monitoring (optional)
GRAFANA_PASSWORD=your-grafana-password