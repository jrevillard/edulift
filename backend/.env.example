NODE_ENV=development
PORT=3001
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
REDIS_URL=redis://localhost:6379

# JWT Secrets (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
# IMPORTANT: Use different secrets for production!
JWT_ACCESS_SECRET=generate-strong-secret-256-bits-for-access
JWT_REFRESH_SECRET=generate-strong-secret-256-bits-for-refresh

# JWT Configuration (Optimized for Mobile - See REFRESH_TOKEN_OPTIMIZED_VALUES_SUMMARY.md)
# Access Token: 15 minutes (short-lived for security)
# Refresh Token: 60 days SLIDING (covers school vacations)
# Grace Period: 5 minutes (compensates for mobile network latency)
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY_DAYS=60
REFRESH_GRACE_PERIOD_MINUTES=5

# Email Configuration
MAGIC_LINK_EXPIRES_IN=10m
EMAIL_FROM=noreply@edulift.app
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
DEEP_LINK_BASE_URL=http://localhost:3000
CORS_ORIGIN="*"

# Firebase Cloud Messaging Configuration
FIREBASE_NOTIFICATIONS_ENABLED=true
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Firebase-Private-Key-Here\n-----END PRIVATE KEY-----"