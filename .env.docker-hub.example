# Configuration for Docker Hub deployment
# Copy this file to .env and modify the values according to your needs

# PostgreSQL Database
POSTGRES_DB=edulift
POSTGRES_USER=edulift
POSTGRES_PASSWORD=changeme_secure_password

# Redis
REDIS_PASSWORD=changeme_redis_password

# Backend JWT
JWT_ACCESS_SECRET=changeme_very_long_jwt_secret_key_for_production

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@edulift.com

# Frontend URLs
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:3001
VITE_SOCKET_URL=http://localhost:3001
VITE_SOCKET_FORCE_POLLING=false

# Environment URLs (for GitHub Actions)
STAGING_URL=https://staging.edulift.com
PRODUCTION_URL=https://edulift.com